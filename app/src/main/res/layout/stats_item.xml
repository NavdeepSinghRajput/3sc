<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_5dp"
    app:layout_constraintCircleRadius="@dimen/radius_20">


    <TextView
        android:id="@+id/statsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_transparent"
        android:gravity="left"
        android:paddingHorizontal="@dimen/small_10dp"
        android:paddingVertical="@dimen/small_5dp"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_16dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/statsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_transparent"
        android:paddingHorizontal="@dimen/small_10dp"
        android:paddingVertical="@dimen/small_5dp"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/text_16dp"
        app:layout_constraintStart_toEndOf="@+id/statsTitle"
        app:layout_constraintTop_toTopOf="parent" />


    <ProgressBar
        android:id="@+id/statsProgress"
        android:layout_width="@dimen/small_0dp"
        android:layout_height="@dimen/small_5dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/statsCount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>